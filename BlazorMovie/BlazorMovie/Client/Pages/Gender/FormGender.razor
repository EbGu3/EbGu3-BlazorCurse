
<EditForm Model="_Gender" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="form-group">
        <label>Nombre:</label>
        <div>
            <InputText class="form-group" @bind-Value="@_Gender.Name"></InputText>
            <ValidationMessage For="@(() => _Gender.Name)"></ValidationMessage>
        </div>
    </div>
    <button class="btn btn-success" type="submit">Guardar Cambios</button>
</EditForm>

@code {
    [Parameter]
    public Gender _Gender { get; set; }

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }
}
