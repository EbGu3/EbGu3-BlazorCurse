@if (Movies == null)
{
    @if (Load == null)
    {
        <textarea>Cargando la data</textarea>
    }
    else
    {
        @Load
    }
}
else if (Movies.Count == 0)
{
    @if (NotExistRegister == null)
    {
        <textarea>No hay registros</textarea>
    }
    else
    {
        @NotExistRegister
    }
}

@code {
    [Parameter]
    public List<Movie> Movies { get; set; }

    [Parameter]
    public RenderFragment Load { get; set; }

    [Parameter]
    public RenderFragment NotExistRegister { get; set; }


    bool ViewButtons = true;

}
