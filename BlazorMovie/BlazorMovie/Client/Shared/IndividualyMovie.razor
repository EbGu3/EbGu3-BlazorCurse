<div style="margin-right: 2%; margin-bottom: 10px; text-align: center;">
    <a href="@URLPelicula">
        <img src="@_Movie.Poster" alt="Poster" style="width: 225px; height: 300px;" />
    </a>
    <p style="max-width: 225px; height: 44px; font-size: 15px; font-weight: bold;"><a href="@URLPelicula">@_Movie.CutTitle</a></p>
    <div>
        <a class="btn btn-info">Editar</a>
        <button type="button" class="btn btn-danger" @onclick="@(() => EliminateMovie.InvokeAsync(_Movie))">Borrar</button>
    </div>
</div>

@code {

    [Parameter]
    public Movie _Movie { get; set; }

    [Parameter]
    public bool ViewButton { get; set; } = false;

    [Parameter]
    public EventCallback<Movie> EliminateMovie { get; set; }

    private string URLPelicula = string.Empty;

    protected override void OnInitialized()
    {
        URLPelicula = $"pelicula/";
        base.OnInitialized();
    }
}
