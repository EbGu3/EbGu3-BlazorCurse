@page "/"
<div>
    <h3>Movies</h3>
    <ListMovie Movies="ListMovies"> </ListMovie>
</div>

<button @onclick="AddMovie">Add</button>

@code{
    private List<Movie> ListMovies;
    protected override void OnInitialized()
    {
        ListMovies = new List<Movie>()
        {
            new Movie(){Title = "Spiderman", LaunchDate = new DateTime(2019, 7,2)},
            new Movie(){Title = "Moana", LaunchDate = new DateTime(2019, 7,2)},
            new Movie(){Title = "Stich", LaunchDate = new DateTime(2019, 7,2)}
        };
    }

    void AddMovie()
    {
        ListMovies.Add(
            new Movie() { Title = "Totad", LaunchDate = new DateTime(2019, 7, 2) }
        ); 
    }
}
}
